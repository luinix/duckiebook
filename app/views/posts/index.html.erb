<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<h4>Search:</h4>
  <%= form_tag(posts_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag("Search") %>
  <% end %>

<table>
  <thead>
    <tr>
      <th>Published at</th>
      <th>Tweetable?</th>
      <th>Tags</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.publication_datetime %></td>
        <td><%= post.tweetable? %></td>
        <td><%= post.tag_list %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @posts %>

<br>
